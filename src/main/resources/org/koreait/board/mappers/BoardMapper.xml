<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.koreait.board.mappers.BoardMapper">
    <insert id="register" useGeneratedKeys="true" keyProperty="seq">
        INSERT INTO member (title, content, email)
        VALUES (#{title}, #{content}, #{email})
    </insert>

    <select id="getList">
        SELECT * FROM board
        <where>
            <if test="skey != null">
                <bind name="_skey" value="'%' + _parameter.getSkey() + '%'" />
                <if test="sopt == 'email'">
                    title LIKE #{_skey}
                </if>
                <if test="sopt == 'name'">
                    content LIKE #{_skey}
                </if>
                <if test="sopt == null">
                    CONCAT(email, title) LIKE #{_skey}
                </if>
            </if>
        </where>
        ORDER BY regDt DESC LIMIT #{offset}, #{limit};
    </select>

    <select id="get">
        SELECT * FROM member WHERE seq=#{seq}
    </select>

    <update id="update">
        UPDATE board
        <set>
            <if test="name != null">
                title = #{title},
            </if>
            <if test="mobile != null">
                content = #{content},
            </if>
        </set>
        <where>
            seq = #{seq}
        </where>
    </update>
    <delete id="delete">
        SELECT * FROM board WHERE seq=#{seq}
    </delete>

</mapper>